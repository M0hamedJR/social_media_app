<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.socialmedia.controller.NotificationsController"
            stylesheets="@styles.css"
            styleClass="root-pane">

    <children>
        <VBox alignment="CENTER" spacing="15" layoutX="50" layoutY="50">
            <Label text="Notifications" styleClass="title-label"/>

            <ListView fx:id="notificationsListView" prefWidth="400" prefHeight="300"/>

            <HBox spacing="10" alignment="CENTER">
                <Button text="Refresh" onAction="#loadNotifications" styleClass="secondary-button"/>
                <Button text="Mark Selected as Read" onAction="#handleMarkAsRead" styleClass="primary-button"/>
                <Button text="Back to Menu" onAction="#goToMenu" styleClass="secondary-button"/>
            </HBox>

            <Label fx:id="messageLabel" styleClass="error-label"/>
        </VBox>
    </children>
</AnchorPane>