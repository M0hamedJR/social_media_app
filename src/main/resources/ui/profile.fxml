<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.effect.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.shape.Circle?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.socialmedia.controller.ProfileController"
           style="-fx-background-color: #f0f2f5;"
           prefHeight="700.0" prefWidth="1100.0">

    <AnchorPane>
        <VBox AnchorPane.topAnchor="100.0" AnchorPane.leftAnchor="150.0" AnchorPane.rightAnchor="150.0"
              spacing="30.0" style="-fx-background-color: white; -fx-background-radius: 30; -fx-padding: 40;">

            <effect>
                <DropShadow color="#00000015" radius="25" offsetY="10" />
            </effect>

            <HBox alignment="CENTER_LEFT" spacing="20.0">
                <Label text="My Profile" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #6e2da1;"/>
                <Region HBox.hgrow="ALWAYS" />
                <!--                <Button text="Back to Menu" onAction="#goToMenu"-->
                <!--                        style="-fx-background-color: transparent; -fx-border-color: #6e2da1; -fx-border-radius: 20; -fx-text-fill: #6e2da1; -fx-cursor: hand;"/>-->
            </HBox>

            <Separator />

            <HBox spacing="40.0" alignment="TOP_CENTER">
                <VBox alignment="CENTER" spacing="15.0">
                    <StackPane>
                        <Circle radius="62.0" fill="WHITE" stroke="#6e2da1" strokeWidth="2.0" />
                        <ImageView fx:id="profileImageView" fitHeight="120.0" fitWidth="120.0" pickOnBounds="true">
                            <clip>
                                <Circle centerX="60.0" centerY="60.0" radius="60.0" />
                            </clip>
                        </ImageView>
                    </StackPane>
                    <Button text="ðŸ“· Upload Image" onAction="#handleUploadImage"
                            style="-fx-background-color: #6e2da115; -fx-text-fill: #6e2da1; -fx-background-radius: 15; -fx-font-weight: bold; -fx-cursor: hand;"/>
                </VBox>

                <VBox spacing="15.0" HBox.hgrow="ALWAYS" maxWidth="500.0">
                    <VBox spacing="5.0">
                        <Label text="Full Name" style="-fx-text-fill: #666; -fx-font-weight: bold;"/>
                        <TextField fx:id="nameField" promptText="Your Name"
                                   style="-fx-background-color: #f1f4f9; -fx-background-radius: 10; -fx-padding: 12; -fx-border-width: 0;"/>
                    </VBox>

                    <VBox spacing="5.0">
                        <Label text="Email Address" style="-fx-text-fill: #666; -fx-font-weight: bold;"/>
                        <TextField fx:id="emailField" promptText="Email"
                                   style="-fx-background-color: #f1f4f9; -fx-background-radius: 10; -fx-padding: 12; -fx-border-width: 0;"/>
                    </VBox>

                    <VBox spacing="5.0">
                        <Label text="Bio" style="-fx-text-fill: #666; -fx-font-weight: bold;"/>
                        <TextArea fx:id="bioField" promptText="Tell us about yourself..."
                                  prefHeight="100.0" wrapText="true"
                                  style="-fx-control-inner-background: #f1f4f9; -fx-background-color: #f1f4f9; -fx-background-radius: 10; -fx-padding: 5; -fx-border-width: 0;"/>
                    </VBox>

                    <HBox alignment="CENTER_LEFT" spacing="15.0">
                        <Button text="Save Changes" onAction="#handleSaveProfile"
                                prefWidth="150.0" prefHeight="40.0"
                                style="-fx-background-color: #6e2da1; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 20; -fx-cursor: hand;">
                            <effect>
                                <DropShadow color="#6e2da144" radius="10" offsetY="5" />
                            </effect>
                        </Button>
                        <Label fx:id="messageLabel" textFill="red" style="-fx-font-weight: bold;" />
                    </HBox>
                </VBox>
            </HBox>
        </VBox>
    </AnchorPane>
</StackPane>