<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.socialmedia.controller.ProfileController"
            stylesheets="@styles.css">

    <children>
        <Label text="My Profile" layoutX="20" layoutY="20" style="-fx-font-size: 20px;"/>

        <ImageView fx:id="profileImageView" layoutX="20" layoutY="60" fitWidth="120" fitHeight="120"/>
        <Button text="Upload Image" layoutX="160" layoutY="60" onAction="#handleUploadImage"/>

        <Label text="Name:" layoutX="20" layoutY="200"/>
        <TextField fx:id="nameField" layoutX="100" layoutY="200" prefWidth="200"/>

        <Label text="Email:" layoutX="20" layoutY="240"/>
        <TextField fx:id="emailField" layoutX="100" layoutY="240" prefWidth="200"/>

        <Label text="Bio:" layoutX="20" layoutY="280"/>
        <TextArea fx:id="bioField" layoutX="100" layoutY="280" prefWidth="300" prefHeight="100"/>

        <Button text="Save Changes" layoutX="20" layoutY="400" onAction="#handleSaveProfile"/>

        <Button text="Back to Menu" layoutX="120" layoutY="400" onAction="#goToMenu"/>

        <Label fx:id="messageLabel" layoutX="20" layoutY="440" textFill="red"/>
    </children>
</AnchorPane>